<h1>Top#index</h1>
<p>Find me in app/views/front/top/index.html.erb</p>

<div>
  <%= form_for(:form, url: sign_in_path) do |f| %>
    <div>
      <p>Email</p>
      <p><%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: false %></p>
    </div>
    <div>
      <p>Password</p>
      <p><%= f.password_field :password, autofocus: true, placeholder: 'Password', autocomplete: false %></p>
    </div>
    <%= f.submit 'sign in' %>
  <% end %>
</div>

<% content_for :head do %>
  <% # data-turbolinks-track" => 'reload' 必ず再読み込みさせる %>
  <%= javascript_pack_tag 'home', 'data-turbolinks-track': 'reload' %>
<% end %>
